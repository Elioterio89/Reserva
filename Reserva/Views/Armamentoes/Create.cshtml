@model Reserva.Models.Armamento

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Adicionar</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Armamento</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Fabricante</label>
            <div class="col-md-10">
                @Html.DropDownList("FabricanteId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FabricanteId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nº Serie</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NSerie, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NSerie, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Modelo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Modelo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Modelo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Munição</label>
            <div class="col-md-10">
                @Html.DropDownList("MunicaoId",null, htmlAttributes : new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.MunicaoId, "", new { @class = "text-danger" })
            </div>
        </div>

        <h1 class="page-subhead-line"></h1>
        <div class="form-group">
            <label class="control-label col-md-2">Quantidade de Entrada</label>
            <div class="col-md-10">
                <input id="QtdArm" name="QtdArm" type="number" class="form-control" tabindex="2" value="0" required>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirmar" class="btn btn-info" />
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-adn" onclick='location.href="@Url.Action("Index")"'>Voltar</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
