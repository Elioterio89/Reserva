@model Reserva.Models.Armamento

@{
    ViewBag.Title = "Add";
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Add Armamento</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    @null
                    <div class="form-group">
                        <label class="control-label col-md-2">Fabricante</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Fabricante.Descricao, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.Fabricante.Descricao)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Nº Serie</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.NSerie, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.NSerie)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Modelo</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Modelo, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.Modelo)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Munição</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Municao.Descricao, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.Municao.Descricao)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Quantidade</label>
                        <div class="col-md-9">
                            <input id="QtdArm" name="QtdArm" type="number" class="form-control" tabindex="2" value="0" required>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add" class="btn btn-info" />
                        <button type="button" class="btn btn-adn" data-dismiss="modal">Fechar</button>
                    </div>
                </div>


            </div>
        </div>
    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


