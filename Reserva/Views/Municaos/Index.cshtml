@model IEnumerable<Reserva.Models.Municao>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Munições</h2>


<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th>
                        <a href="@Url.Action("Create")" class="my-link-class "><i class="fa fa-plus fa-2x " aria-hidden="true"></i></a>
                    </th>

                    <th>
                        Fabricante
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th>
                        Quantidade Balas
                    </th>
                    <th>
                        Calibre
                    </th>

                    <th>
                        Estoque
                    </th>

                    <th style="width: 100px"></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="#" class="my-link-class modal-link" data-targeturl="@Url.Action("Add","Municaos",new { id = item.Id })"><i class="fa fa-plus-square-o fa " aria-hidden="true"></i></a>
                            @*<button type="button" class="btn btn-success btn-sm  modal-link"
                                data-targeturl="@Url.Action("Add","Municaos",new { id = item.Id })">view</button>*@
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fabricante.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuantidadeBala)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Calibre.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estoque)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", new { id=item.Id })" class="my-link-class "><i class="fa fa-pencil fa-2x" aria-hidden="true"></i></a>
                            <a href="@Url.Action("Details", new { id=item.Id })" class="my-link-class "><i class="fa fa-eye fa-2x" aria-hidden="true"></i></a>
                            <a href="@Url.Action("Delete", new { id=item.Id })" class="my-link-class "><i class="fa fa-trash fa-2x" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                }

            </table>


        </div>
    </div>
</div>

@section scripts{
    <script>
        $(function () {

            $('body').on('click', '.modal-link', function (e) {
                e.preventDefault();
                $("#modal-container").remove();
                $.get($(this).data("targeturl"), function (data) {
                    $('<div id="modal-container" class="modal fade">  <div class="modal-dialog modal-lg" style="width:700px;>' +
                        '<div class="modal-content" id= "modalbody" >' +
                        data +
                        '</div></div></div>').modal();
                });
            });
        });
    </script>
}



