@model Reserva.Models.Acessorio

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Adicionar</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Acessorio</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Fabricante</label>
            <div class="col-md-10">
                @Html.DropDownList("FabricanteId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FabricanteId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>
        <h1 class="page-subhead-line"></h1>
        <div class="form-group">
            <label class="control-label col-md-2">Quantidade de Entrada</label>
            <div class="col-md-10">
                <input id="QtdAce" name="QtdAce" type="number" class="form-control" tabindex="2" value="0" required>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-info" data-toggle="modal" data-target="#ModalConfirmar">Confirmar</button>
            </div>
        </div>
    </div>

    <div class="modal fade" id="ModalConfirmar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    Inserir  Acessorio?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-adn" data-dismiss="modal">Fechar</button>
                    <input type="submit" value="Confirmar" class="btn btn-info" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-adn" onclick='location.href="@Url.Action("Index")"'>Voltar</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
