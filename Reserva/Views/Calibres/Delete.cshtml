@model Reserva.Models.Calibre

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Excluir</h2>


<div>
    <h4>Calibre</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label class="control-label col-md-2">Tamanho</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <br>
        <div class="form-actions no-color">
            <button type="button" class="btn btn-adn" onclick='location.href="@Url.Action("Index")"'>Voltar</button>
            <button class="btn btn-danger" data-toggle="modal" data-target="#ModalEditar">Deletar</button>
        </div>

        <div class="modal fade" id="ModalEditar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    </div>
                    <div class="modal-body">
                        <h3>Tem certeza de que deseja excluir esse Calibre ?</h3>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-adn" data-dismiss="modal">Fechar</button>
                        <input type="submit" value="Deletar" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>
