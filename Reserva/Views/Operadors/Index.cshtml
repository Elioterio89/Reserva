@model IEnumerable<Reserva.Models.Operador>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Operadores</h2>


<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th style="width: 35px">
                        <a href="@Url.Action("Create")" class="my-link-class "><i class="fa fa-plus fa-2x " aria-hidden="true"></i></a>
                    </th>
                    <th>
                       Nome de Guerra
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Matricula)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ADM)
                    </th>
                    <th>
                        Reserva
                    </th>
                    <th style="width: 100px"></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td></td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomeDeGuerra)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Matricula)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ADM)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Almoxarifado.Sigla)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", new { id=item.Id })" class="my-link-class "><i class="fa fa-pencil fa-2x" aria-hidden="true"></i></a> 
                            <a href="@Url.Action("Details", new { id=item.Id })" class="my-link-class "><i class="fa fa-eye fa-2x" aria-hidden="true"></i></a> 
                            <a href="@Url.Action("Delete", new { id=item.Id })" class="my-link-class "><i class="fa fa-trash fa-2x" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

