@using Microsoft.AspNet.Identity
@using Reserva.Models



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Reserva</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/basic.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    @if (Request.IsAuthenticated)
    {
            <div id="wrapper">
                <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a href="#" onclick='location.href="@Url.Action("Index", "Home")"' class="brand-logo ">
                            <img src="~/Imagens/eb.png" alt="">
                        </a>
                        @*@Html.ActionLink("Reserva Armamento", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                    </div>
                    <div class="header-right">
                        @Html.Partial("_LoginPartial")
                    </div>
                </nav>
                <nav class="navbar-default navbar-side" role="navigation">
                    <div class="sidebar-collapse">
                        <ul class="nav" id="main-menu">
                            <li>
                                <a href="#"><i class="fa fa-database"></i>Parametrizações<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li>
                                        @Html.ActionLink("Calibre ", "Index", "Calibres")
                                    </li>

                                    <li>
                                        @Html.ActionLink("Fabricante", "Index", "Fabricantes")
                                    </li>

                                    <li>
                                        @Html.ActionLink("Patente", "Index", "Patentes")
                                    </li>


                                </ul>
                            </li>

                            <li>
                                <a href="#"><i class="fa fa-list"></i>Cadastros <span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    @*@if (OperadorViewModel.USUARIO != null && OperadorViewModel.USUARIO.ADM == true)
                                        {*@
                                    <li>
                                        @Html.ActionLink("Reserva", "Index", "Almoxarifadoes")
                                    </li>

                                    <li>
                                        @Html.ActionLink("Operador", "Index", "Operadors")
                                    </li>
                                    @*}*@
                                    <li>
                                        @Html.ActionLink("Militar", "Index", "Usuarios")
                                    </li>

                                    <li>
                                        @Html.ActionLink("Armamento ", "Index", "Armamentoes")
                                    </li>

                                    <li>
                                        @Html.ActionLink("Acessorio", "Index", "Acessorios")
                                    </li>

                                    <li>
                                        @Html.ActionLink("Municao", "Index", "Municaos")
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-retweet"></i>Cautela<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li>
                                        @Html.ActionLink("Retirar ", "Index", "Militars")
                                    </li>

                                    <li>
                                        @Html.ActionLink("Devolver", "Index2", "Militars")
                                    </li>

                                    <li>
                                        @Html.ActionLink("Consultar", "Index", "Militars")
                                    </li>


                                </ul>
                            </li>

                        </ul>

                    </div>

                </nav>
                <div id="page-wrapper">
                    <div id="page-inner">
                        @RenderBody()
                    </div>
                </div>
                <footer>
                    <p>&copy; LabWeb-2 2017.1</p>
                </footer>
            </div>        
    }
    else
    {
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <a href="#" onclick='location.href="@Url.Action("Index","Home")"' class="brand-logo ">
                    <img src="~/Imagens/eb.png" alt="">
                </a>
            </div>
            <div class="header-right">
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </nav>
        <div class="container body-content">
            @RenderBody()
        </div>

    }

    <script src="~/js/jquery-1.10.2.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/jquery.metisMenu.js"></script>
    <script src="~/js/custom.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
