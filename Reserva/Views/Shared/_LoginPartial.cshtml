@using Microsoft.AspNet.Identity
@using Reserva.Models

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @if (OperadorViewModel.USUARIO != null)
            {
            @Html.ActionLink(OperadorViewModel.USUARIO.NomeDeGuerra + " - " + OperadorViewModel.USUARIO.Almoxarifado.Sigla, "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            }
            else
            {
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            }
        </li>
        <li><a title="Logout" href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out fa-1x" aria-hidden="true" ></i></a></li>
    </ul>
    }
}else
{
<ul class="nav navbar-nav navbar-right">
    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
</ul>
}
